@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml 
!define FONTAWESOME https://raw.githubusercontent.com/tupadr3/plantuml-icon-font-sprites/master/font-awesome-5 
' uncomment the following line and comment the first to use locally 
' !include C4_Container.puml 
!include FONTAWESOME/server.puml 
!include FONTAWESOME/envelope.puml 
 
' LAYOUT_TOP_DOWN() 
' LAYOUT_AS_SKETCH() 
LAYOUT_WITH_LEGEND() 
 
title Contiene el diagrama del sistema de cursos 

Person(admin,"Administrador", "El que brinda la información de los cursos y administra las distintas solicitudes, la aplicación, etc")
Person(empleado, Empleado, "Persona que hará los cursos") 
Person(empresa,"Empresa", "Sería la que solicita los cursos")
Person(profesor,"Profesor", "El encargado de dar los cursos y material")

System_Boundary(c1, "Internet Cliente"){ 

    Container(web_app, "Aplicación web", "Nombre,Tiempo total, Intentos del cuestionario, precio por persona con descuentos, valoración","Contiene los diferentes cursos con su información adicional") 

    ContainerDb(bbdd, "Base de Datos", "Información de Registros,acceso, loguin, etc.")  

    Container(backend_api, "Aplicación de API", "", "Proporciona funcionalidad del banco a través de API", "server")

    Container(App_Cursos, "Aplicación de los cursos", "Muestra información, permite la carga de cursos entre otras cosas")
    
    Container(sms_api, "Api para conectar con SMS","","Proporciona funcionalidad a través de API","server")
    
    Container(banco_api, "Api para conectar con el banco","Api para hacer una conexión con el banco para efectuar el cobro","Proporciona funcionalidad a través de API","server")
    
    Container(calendario_api, "Api para conectar con el calendario","Una API que conecte con el calendario de Google y nos permita visualizar las diferentes fechas", "Funcionalidad a través de API","server")
}

System_Ext(Sistema_de_cursos, "Marco principal del sistema", "Almacena información sobre los usuarios, cuentas, transacciones, etc.")
System_Ext(SMS_System, "SMS System","Fecha de finalización, tiempo restante, etc","") 
System_Ext(calendario, "Calendario de Google", "Fechas de finalización e inicio","")
System_Ext(banco, "Banco","Devolución de cobros y pagos")

Rel(admin, App_Cursos, "Consultas")
Rel(empleado, web_app, "")
Rel(empresa,web_app,"Consultas")
Rel(profesor, web_app,"Subida y bajada de material")

Rel(web_app, App_Cursos,"Entrega de información")
Rel(App_Cursos, backend_api, "")
Rel(App_Cursos, sms_api, "")
Rel(sms_api, SMS_System,"")
Rel(calendario_api, calendario, "Ingreso de fechas")
Rel(banco_api, banco,"")
Rel(web_app, banco_api,"")
Rel(web_app,calendario_api,"")

Rel(backend_api, bbdd, "Lecturas, escrituras y reescrituras")
Rel(backend_api, Sistema_de_cursos,"")

@enduml
